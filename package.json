{
  "name": "safe-jsp-formatter",
  "displayName": "Safe JSP Formatter",
  "description": "The only non-destructive formatter for JSP scriptlets.",
  "version": "0.1.2",
  "preview": true,
  "publisher": "davidfan",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/fandavid/safe-jsp-formatter.git"
  },
  "engines": {
    "vscode": "^1.104.0"
  },
  "license": "MIT",
  "keywords": [
    "jsp",
    "formatter",
    "beautify",
    "java",
    "scriptlet"
  ],
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:jsp"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "jsp",
        "aliases": [
          "JSP",
          "Java Server Pages"
        ],
        "extensions": [
          ".jsp",
          ".jspf",
          ".jspx"
        ],
        "mimetypes": [
          "application/x-jsp"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "test:unit": "npm run compile-tests && npx mocha --ui tdd out/test/formatter.test.js"
  },
  "devDependencies": {
    "@types/js-beautify": "^1.14.3",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.104.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "dependencies": {
    "js-beautify": "^1.15.4",
    "prettier": "^3.8.1",
    "prettier-plugin-java": "^2.8.1"
  }
}
